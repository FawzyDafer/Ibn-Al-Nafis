@model FAQ
<div class="w3-modal-content w3-card-4 w3-animate-zoom" style="padding:32px;">
    <form asp-area="" asp-controller="Account" asp-action="FAQ"
          data-ajax="true"
          data-ajax-method="POST"
          data-ajax-loading="#divloading"
          data-ajax-success="SuccessFAQ">
        <div class="w3-container w3-white w3-center">
            <i onclick="document.getElementById('FAQ').style.display='none'" 
               class="fa fa-remove w3-right w3-button w3-transparent w3-xxlarge"></i>
            <h2 class="w3-wide">Frequently ask question</h2>
            <h4 class="text-danger">@TempData["Error"]</h4>
            <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
            <p>
                <input id="Question" asp-for="Question" placeholder="Question" class="form-control" />
                <span class="text-danger" asp-validation-for="Question"></span>
            <p>
                <input type="submit" value="Save"
                       class="w3-button w3-padding-large w3-red w3-margin-bottom " />
        </div>
    </form>
</div>

<script>
    function SuccessFAQ() {
        document.getElementById('FAQ').style.display = 'none';
        $('#Question').val("");
    }
</script>