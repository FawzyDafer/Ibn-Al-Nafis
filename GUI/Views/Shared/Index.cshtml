@inject SignInManager<User> SignInManager
@model LoginModel

<partial name="Sider" model="0" />

<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <div class="m-content">

        <div class="text-center w3-container">
            <img src="~/Image/Logo.png" width="200" />
        </div>


        @if (!SignInManager.IsSignedIn(User))
        {
            <div class="col-sm-6 offset-sm-3 text-center d-none d-sm-none d-md-none d-lg-block d-xl-block">
                <form asp-area="" asp-action="Login" asp-controller="Home" method="post"
                      class="form-inline justify-content-center">

                    <div class="form-group">
                        <input asp-for="UserName" placeholder="User Name" class="form-control" />
                        <input asp-for="Password" type="password" placeholder="Password" class="form-control" />
                        <input type="submit" value="Sign in" class="btn btn-outline-primary" />
                    </div>

                    <div class="form-group">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>

                </form>
            </div>

            <div class="w3-hide-large">
                <form asp-action="Login" asp-controller="Home" asp-area="" method="post" class="form-inlin">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group w3-container">
                        <input id="smUserName" asp-for="UserName" placeholder="User Name"
                               class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group w3-container">
                        <input id="smPassword" asp-for="Password" type="password"
                               placeholder="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group w3-container">
                        <input type="submit" value="Sign in" class="btn btn-outline-primary" />
                    </div>
                </form>
            </div>
        }

        <br />

        @await Component.InvokeAsync("SliderView")

    </div>
</div>