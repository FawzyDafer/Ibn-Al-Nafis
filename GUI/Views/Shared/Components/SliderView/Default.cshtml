@model List<Images>
@{
    Layout = null;
}

<cache enabled="true" expires-after="@TimeSpan.FromHours(1)"></cache>
<div class="w3-content w3-display-container">
    @foreach (var item in Model)
    {
        <div class="mySlides">
            <img class="w3-animate-right" alt="@item.Title" style="max-height:400px; width:100%"
                 src='/Admin/Slider/ViewImage/@item.ImageId'>
            @if (item.Title != " ")
            {
                <div class="w3-display-middle w3-large w3-container w3-padding-16 w3-black">
                    @item.Title
                </div>
            }
        </div>
    }

    <button class="w3-hover-text-khaki w3-teal btn w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
    <button class="w3-hover-text-khaki w3-teal btn w3-display-right" onclick="plusDivs(1)">&#10095;</button>

    <div class="w3-center w3-container w3-section w3-large w3-text-white w3-display-bottommiddle" style="width:100%">
        <span class="demo w3-border btn w3-hover-blue" onclick="currentDiv(1)"></span>
        <span class="demo w3-border btn w3-hover-blue" onclick="currentDiv(2)"></span>
        <span class="demo w3-border btn w3-hover-blue" onclick="currentDiv(3)"></span>
        <span class="demo w3-border btn w3-hover-blue" onclick="currentDiv(4)"></span>
        <span class="demo w3-border btn w3-hover-blue" onclick="currentDiv(5)"></span>
        <span class="demo w3-border btn w3-hover-blue" onclick="currentDiv(6)"></span>
        <span class="demo w3-border btn w3-hover-blue" onclick="currentDiv(7)"></span>
        <span class="demo w3-border btn w3-hover-blue" onclick="currentDiv(8)"></span>
    </div>

</div>

<script src="~/lib/jquery/Model.js"></script>