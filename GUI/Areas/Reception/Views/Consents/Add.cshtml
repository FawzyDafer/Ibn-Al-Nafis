@model Consent
<div class="w3-modal-content w3-card-4 w3-animate-zoom" style="padding:32px;">
    <form name="AddForm" asp-area="Reception" asp-controller="Consents" asp-action="Add"
          data-ajax="true"
          data-ajax-method="POST"
          data-ajax-update="#acontent"
          data-ajax-loading="#divloading"
          data-ajax-success="Success"
          data-ajax-failure="Failure">
        <div class="w3-container w3-white w3-center">
            <i onclick="document.getElementById('Add').style.display='none'" class="fa fa-remove w3-right w3-button w3-transparent w3-xxlarge"></i>
            <h2 class="w3-wide">Add new Consent</h2>
            <h4 id="failuer" class="text-danger">@TempData["Error"]</h4>
            <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
            <p>
                <input id="Title" asp-for="Description" class="form-control"
                       placeholder="Consent Title" />
                <span class="text-danger" asp-validation-for="Description"></span>
                <br />
                <button type="submit"
                        class="w3-padding-large btn btn-outline-success w3-margin-bottom">
                    <i class="flaticon-add-circular-button"></i>
                </button>
        </div>
    </form>
</div>

<script>
    function Success() {
        document.getElementById('Add').style.display = 'none';
        $('#Title').val("");
        document.getElementById('failuer').innerHTML = ' ';
    }

    function Failure() {
        document.getElementById('failuer').innerHTML = 'The Consent is already existed';
    }
</script>