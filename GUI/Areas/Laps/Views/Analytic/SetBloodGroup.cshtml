@model PatientBloodGroup
@{Layout = null;}
<div class="w3-modal-content w3-card-4 w3-animate-zoom" style="padding:32px;">
    <form name="AddForm" asp-area="Laps" asp-controller="Analytic"
          asp-action="SetBloodGroup"
          data-ajax="true"
          data-ajax-method="POST"
          data-ajax-loading="#divloading"
          data-ajax-update="#acontent"
          data-ajax-success="Success">
        <div class="w3-container w3-white w3-center">
            <i onclick="document.getElementById('Blood').style.display='none'"
               class="fa fa-remove w3-right w3-button w3-transparent w3-xxlarge"></i>
            <h2 class="w3-wide">Set BloodGroup</h2>
            <h4 class="text-danger">@TempData["Error"]</h4>
            <h4 class="alert-success">@TempData["success"]</h4>
            <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="SSN" />
            <p>
                <select type="text" id="Description" asp-for="BloodGroup"
                        class="form-control">
                    <option value="">Please Select Blood Group</option>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="O+">O+</option>
                    <option value="O-">O-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                </select>
                <span class="text-danger" asp-validation-for="BloodGroup"></span>
            <p>
                <button type="submit"
                        class="w3-padding-large btn btn-outline-success w3-margin-bottom ">
                    <i class="flaticon-add-circular-button"></i>
                </button>
        </div>
    </form>
</div>

<script>

    function Success() {
        document.getElementById('Blood').style.display = 'none';
    };

</script>